<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="mCustumText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rount_et</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColorHint">@color/colorLightGray</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="mCustumTextView" parent="Widget.AppCompat.EditText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="mCustumButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rount_bt</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@android:color/background_light</item>
    </style>

    <style name="Theme.AppCompat.Ligh.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.AppCompat.Ligh.NoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>

    </style>



</resources>


